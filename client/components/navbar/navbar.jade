div.navbar.navbar-default.navbar-fixed-top(ng-controller='NavbarCtrl')
  div.container-fluid
    div.navbar-header
      button.navbar-toggle(type='button', ng-click='isCollapsed = !isCollapsed')
        span.sr-only Toggle navigation
        span.icon-bar
        span.icon-bar
        span.icon-bar
      a.navbar-brand(href='/') affaris

    div#navbar-main.navbar-collapse.collapse(collapse='isCollapsed')
      ul.nav.navbar-nav
        li(ng-repeat='item in menu', ng-class='{active: isActive(item.link)}')
          a(ng-href='{{item.link}}') {{item.title}}
        li(ng-show='isAdmin()', ng-class='{active: isActive("/admin")}')
          a(href='/admin') Admin

      ul.nav.navbar-nav.navbar-right
        li(ng-show='isLoggedIn()', ng-class='{active: isActive("/signup")}')
          a(href='#') 
            i.fa.fa-lg.fa-bell.text-danger

        li(ng-hide='isLoggedIn()', ng-class='{active: isActive("/login")}')
          a(href='/login') Login

        li.dropdown(ng-show='isLoggedIn()', ng-class='{active: isActive("/settings")}')
          a.dropdown-toggle(href='#',data-toggle='dropdown')
            span {{ getCurrentUser().name }} &nbsp;
              i.fa.fa-user.fa-lg
          ul.dropdown-menu
            li
              a(href='/settings') Settings
            li(ng-show='isLoggedIn()', ng-class='{active: isActive("/logout")}')
              a(href='', ng-click='logout()') Logout
